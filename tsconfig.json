{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // <-- Η ΚΡΙΣΙΜΗ ΑΛΛΑΓΗ ΕΙΝΑΙ ΕΔΩ
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Προσθέτω και αυτό ως βέλτιστη πρακτική για τα imports
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, ".next/types/app/products/placeholder/layout_bak.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
